extends layout

block content
  h1 Users
  form(action="/users" method="post")
    div
      label Username:
      input(type="text" name="username")
    div
      label Email:
      input(type="text" name="email")
    input(type="submit" value="Add User")
  hr
  table
    tr
      th Username
      th Email
    each user in users
      tr
        td= user.username
        td= user.email
